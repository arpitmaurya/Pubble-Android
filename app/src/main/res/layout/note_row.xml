<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:elevation="1dp"
    android:padding="10dp"
    android:background="@drawable/dark_item_event_bg"
    android:clickable="true"
    android:focusable="true"


    >


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/hb"
                android:gravity="start"
                android:layout_margin="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:text="My Notewwewepfwefjweoifjwoefijw"
                android:textColor="#F5222222"
                android:textSize="23sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/hmed"
                android:gravity="start"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="6dp"

                android:text="This is my notes."
                android:textColor="#EE404040"
                android:maxLines="9"
                android:ellipsize="end"
                android:textSize="15sp"
                android:visibility="visible"
                />


        </LinearLayout>



